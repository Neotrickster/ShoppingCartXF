<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingCart.Views.AboutPage"
             xmlns:local="clr-namespace:ShoppingCart;assembly=ShoppingCart"
             BindingContext="{x:Static local:App.AboutViewModel}"
             Title="About"
             BackgroundColor="White">

  <StackLayout VerticalOptions="FillAndExpand" Padding="50">
    <Label Text="Shopping Cart Demo App" />

    <Button Text="See Code"
            Command="{Binding OpenUrlCommand}"
            CommandParameter="https://github.com/jquintus/spikes/tree/master/XamarinSpikes/ShoppingCart" />

    <Button Text="Read Blog"
            Command="{Binding OpenUrlCommand}"
            CommandParameter="http://blog.masterdevs.com/xf-day-9/" />
  </StackLayout>
</ContentPage>